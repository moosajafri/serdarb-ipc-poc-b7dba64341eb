@{
    ViewData["Title"] = "Home Page";
}
<h1>Upload Files</h1>
<div class="row">
    <section>
        <form method="post" enctype="multipart/form-data" action="/UploadFiles" asp-controller="UploadFiles" asp-action="Post">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload one or more files using this form:</p>
                    <input type="file" name="files" multiple />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>
    </section>
</div>
<hr />
 
